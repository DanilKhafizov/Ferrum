<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_main">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_icon"
            android:paddingStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingEnd="16dp"
            android:text="@string/ferrum_name"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>

<RelativeLayout
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toBottomOf="@+id/action_bar"
    android:layout_marginTop="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/pavel_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pavel" />


    </LinearLayout>

</RelativeLayout>


    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_reg"
        android:orientation="vertical"
        android:paddingVertical="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/viewPager">

        <TextView
            android:id="@+id/services_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Услуги"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:textSize="20dp"
            />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/services_tv"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@color/black" />


    <TextView
        android:id="@+id/news_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новости"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/relative"
        />

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/news_tv"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/relative1"
            android:text="@string/invite_text"
            android:textColor="@color/black"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>