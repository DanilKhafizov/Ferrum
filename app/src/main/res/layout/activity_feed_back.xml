<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.FeedBackActivity">

    <RelativeLayout
        android:id="@+id/main_title_feed_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hint_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/back_icon"/>

        <TextView
            android:id="@+id/profile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/back_btn"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_back_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/user_importance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_importance_text"
        android:textSize="16sp"
        android:textColor="@color/hint_color"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title_feed_back"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/user_importance_tv"
        app:layout_constraintBottom_toTopOf="@+id/main_menu">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/appeal_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="20dp"
            android:background="@drawable/schedule_bg_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <Spinner
                android:id="@+id/spinner_appeal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimaryDark"/>

        </FrameLayout>


        <EditText
            android:id="@+id/desc_appeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Начните вводить текст"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="20dp"
            android:background="@drawable/schedule_bg_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appeal_frame"/>


        <EditText
            android:id="@+id/phone_appeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваш номер телефона"
            android:layout_marginTop="50dp"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="phone"
            android:textSize="16sp"
            android:padding="20dp"
            android:background="@drawable/schedule_bg_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc_appeal"/>


        <EditText
            android:id="@+id/email_appeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваш email"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="20dp"
            android:background="@drawable/schedule_bg_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_appeal"/>


        <Button
            android:id="@+id/send_appeal_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Отправить"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_appeal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:itemRippleColor="@color/selected_block"
        app:itemTextColor="@color/nav_menu_selector"
        app:itemIconTint="@color/nav_menu_selector"
        app:menu="@menu/bottom_menu"/>






</androidx.constraintlayout.widget.ConstraintLayout>