<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity"
    android:background="@drawable/bg_main">



    <RelativeLayout
        android:id="@+id/frame_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/back_icon_profile"
            android:contentDescription="@string/todo"
            android:background="@android:color/transparent"/>


        <ImageButton
            android:id="@+id/signOutBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="35dp"
            android:contentDescription="@string/todo"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_logout" />



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/frame_services"
        app:layout_constraintBottom_toTopOf="@+id/main_menu">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <FrameLayout
        android:id="@+id/frame_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_im_btn"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/default_image"
            android:scaleType="fitXY"
            app:riv_oval="true"/>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rotateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/frame_image"
        app:layout_constraintStart_toEndOf="@+id/frame_image"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_rotate"/>



    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:text="@string/edit_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="normal"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_image" />


    <TextView
        android:id="@+id/pers_data_tv"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_card"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="@string/personal_data_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_btn" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pers_data_tv"
        android:layout_marginTop="13dp"
        android:src="@drawable/user"
        android:contentDescription="@string/todo"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/surname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_icon"
        app:layout_constraintTop_toBottomOf="@+id/pers_data_tv"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:inputType="none"
        android:focusable="false"
        android:layout_marginStart="15dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/user_icon"
        app:layout_constraintTop_toBottomOf="@+id/surname_tv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:inputType="none"
        android:focusable="false"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@android:color/transparent"/>


    <ImageView
        android:id="@+id/birthday_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/contact_details_tv"
        android:src="@drawable/birthday"
        android:layout_marginBottom="13dp"
        android:contentDescription="@string/todo"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/birthday_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/user_icon"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        android:text="@string/birthday_text"
        android:inputType="none"
        android:focusable="false"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/birthday_add_im_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/birthday_tv"
        app:layout_constraintBottom_toBottomOf="@+id/birthday_tv"
        android:layout_marginStart="10dp"
        android:src="@drawable/add_im_black"
        android:contentDescription="@string/todo"
        android:padding="0dp"
        android:backgroundTint="@android:color/transparent"/>
    <TextView
        android:id="@+id/contact_details_tv"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_card"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="@string/contact_details_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthday_tv" />

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_details_tv"
        android:src="@drawable/email"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/todo"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/email_icon"
        app:layout_constraintTop_toBottomOf="@+id/contact_details_tv"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:inputType="none"
        android:focusable="false"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/phone"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/feedback_form_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_icon" />

    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/email_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        android:text="@string/phone_text"
        android:layout_marginTop="20dp"
        android:inputType="none"
        android:textSize="18sp"
        android:focusable="false"
        android:layout_marginStart="15dp"
        android:background="@android:color/transparent"/>


    <ImageButton
        android:id="@+id/phone_add_im_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/phone_tv"
        app:layout_constraintBottom_toBottomOf="@+id/phone_tv"
        android:layout_marginStart="10dp"
        android:src="@drawable/add_im_black"
        android:padding="0dp"
        android:contentDescription="@string/todo"
        android:backgroundTint="@android:color/transparent"/>

    <TextView
        android:id="@+id/feedback_form_tv"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_card"
        android:backgroundTint="@color/white"
        android:text="Обратная связь"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_tv" />

            <RelativeLayout
                android:id="@+id/feed_back_im_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feedback_form_tv">

                <ImageView
                    android:id="@+id/feedback_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_feedback_form"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/feedback_icon"
                    android:text="Заполнить форму обратной связи"
                    android:textSize="16sp" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="25dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitEnd"
                    android:src="@drawable/go_icon" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/call_club_im_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feed_back_im_btn">

                <ImageView
                    android:id="@+id/phone_image"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/phone_icon"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/call_club_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/phone_image"
                    android:text="Позвонить в клуб"
                    android:textSize="16sp" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="25dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitEnd"
                    android:src="@drawable/go_icon" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/vk_im_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/call_club_im_btn">

                <ImageView
                    android:id="@+id/vk_image"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vk_icon"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/vk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/vk_image"
                    android:text="Написать в ВКонтакте"
                    android:textSize="16sp" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="25dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitEnd"
                    android:src="@drawable/go_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tools_im_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vk_im_btn">

                <ImageView
                    android:id="@+id/tools_image"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_tools"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/tools_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tools_image"
                    android:text="@string/admin_btn_text"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="25dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitEnd"
                    android:src="@drawable/go_icon" />

            </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:itemRippleColor="@color/selected_block"
        app:itemIconTint="@color/nav_menu_selector"
        android:background="@color/menu_color"
        app:itemTextColor="@color/nav_menu_selector"
        app:menu="@menu/bottom_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>